<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="et_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/bg_grey</item>
        <item name="singleLine">true</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">16dp</item>
        <item name="android:textColorHint">#b0b3ba</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="btn_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">64dp</item>
        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>